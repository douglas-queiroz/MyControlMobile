<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.douglas.flat" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.ClientActivity"
            android:label="@string/title_activity_client"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.activity.ClientDetailActivity"
            android:label="@string/title_activity_client_detail"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.activity.SaleActivity"
            android:label="@string/title_activity_sale"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.activity.SaleListActivity"
            android:label="@string/title_activity_sale_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.activity.PaymentActivity"
            android:label="@string/title_activity_payment" >
        </activity>
        <activity
            android:name=".view.activity.ProductActivity"
            android:label="@string/title_activity_product" >
        </activity>
    </application>

</manifest>
